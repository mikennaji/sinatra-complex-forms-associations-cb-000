<h1>Update Pets</h1>

<h2>Edits for <%= @pet.name %></h2>

  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>">

    <br>
    <p>Select an existing owner or create a new one below.</p>


    <%@owners.each do |owner|%>

     <input type="checkbox" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"  <%='checked' if @pet.owner.name == owner.name %>><%=owner.name%></input>
   <%end%>

   <br></br>     
    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>

    <input type="submit" value="Update Pet">
  </form>
