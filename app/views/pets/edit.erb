<h1>Update Pets</h1>

<h2>Edits for <%= @pet.name %></h2>

  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the Pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>">

    <br>
    <p>Select an existing owner or create a new one below.</p>


    <label>Choose an existing pet:</label>

   <br></br>

   <%@pets.each do |pet|%>
     <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.name%>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%></input>
   <%end%>

   <br></br>

    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name"></input>
    <br><br>

    <input type="submit" value="Update Pet">
  </form>
